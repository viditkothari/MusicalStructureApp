<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.co.viditkothari.musicalstructureapp.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="I'm feeling ..."
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- Happy Button -->
        <LinearLayout
            android:id="@+id/btnHappy"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imgHappy"
                android:src="@drawable/happyface"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="8dp"
                android:background="@android:color/holo_green_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:text="Happy"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:textAlignment="textStart"
                android:gravity="start" />

        </LinearLayout>

        <!-- Loving Button -->
        <LinearLayout
            android:id="@+id/btnLoving"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_below="@id/btnHappy"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/lovingface"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="8dp"
                android:background="#e91e49" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="#e91e49"
                android:text="In Love"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:textAlignment="textStart"
                android:gravity="start" />

        </LinearLayout>

        <!-- Sad Button -->
        <LinearLayout
            android:id="@+id/btnSad"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/btnLoving">

            <ImageView
                android:src="@drawable/sadface"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="8dp"
                android:background="#b85929" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="#b85929"
                android:text="Sad"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:textAlignment="textStart"
                android:gravity="start" />

        </LinearLayout>

        <!-- Angry Button -->
        <LinearLayout
            android:id="@+id/btnAngry"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_below="@id/btnSad">

            <ImageView
                android:src="@drawable/angryface"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="8dp"
                android:background="@android:color/holo_red_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark"
                android:text="Angry"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:textAlignment="textStart"
                android:gravity="start" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>